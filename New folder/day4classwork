fruits = ["Mango", "Banana", "Apple"]
vegetables = ["Carrot", "Tomato", "Potato"]
beverages = ["Juice", "lime", "Water"]

fruits.append("grapes")

vegetables.insert(1, "beetroot")

beverages.pop()

inventory = [fruits, vegetables, beverages]

print( fruits[:2])

print( vegetables[-1])

fruit_lengths = [len(fruit) for fruit in fruits]
print( fruit_lengths)

if "Water" in beverages:
    print("Yes, Water is in the beverages list")
else:
    print("No, Water is not in the beverages list")

first_items = (fruits[0], vegetables[0], beverages[0])
print( first_items)